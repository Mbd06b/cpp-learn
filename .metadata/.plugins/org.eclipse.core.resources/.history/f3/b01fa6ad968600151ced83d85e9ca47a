#include <iostream>
#include <string.h>
#include "pCharSSort.h"
using namespace std;


char * Sort (char * Array [], int Counter) // x is our number of rows.
{

	char * Temp [Counter];
	bool Sorted = true;


	cout << "I'm before the do loop" << endl;

	//strcmp (pNames [0], pNames [1]);
	//Temp = pNames [0];  //to swap the pointers

		do{
	cout << "I'm in the do loop" << endl;
		Sorted = true;
		for (int i = 0; i < Counter; i++)
			{ cout << "I'm in the for loop" << endl;
					if (strcmp(Array[i], Array [i + 1]) > 0)  //what do I do if The element above is higher than the element below?
					{ cout << "I'm in the if statement" << endl;
					strcpy(Temp [i], Array [i]);   //save the existing value
					strcpy(Array [i], Array [i + 1]); //swop the value
					strcpy(Array [i + 1], Temp [i]);  // assign the new value
					Sorted = false;
					}
			}
		}while (Sorted != true);


		cout << "Sorted names are " << endl;
			for (int i = 0; i < Counter; i++)
			{
			cout << Array [i] << ", ";
			}

	return (Array);
}


