#include <iostream>
using namespace std;

int Factoral (int);

int main() {
	cout << "Factoral of 8 is " << Factoral (8) << endl;

	return 0;
}

int Factoral (int n)
{
	if (n == 0)
		{
			return 1;
		}
	else
	   {
		return n * Factoral (n-1);
	   }
	}
