#ifndef ADDRESS_H_
#define ADDRESS_H_

#include "myStringclass.h"
#include "Name.h"

class Address{
public:
				Address();
				Address (Address &); //copy
				virtual ~Address();


				String  &  getStreet	   ();
				String   & getCity  	   ();
				String   & getState     ();
				String   & getZip       ();

				Address &    setStreet (const String &);
				Address &    setCity   (const String &);
				Address &    setState  (const String &);
				Address &    setZip    (const String &);

				int			Compare     (const Name &) const;
				//void		Display 	();
				ostream & 	Display 	(ostream & = cout)const;


				//operators
				void		    Read	 (istream &);//method used to facilitate the read in '>>' operator.
		        Name & 	    operator = 	 (const Name &);

private:
	String sStreet;
	String sCity;
	String sState;
	String sZip;

};


String & Address::getStreet(){
	return sStreet;
}
String & Address::getCity(){
	return sCity;
}
String & Address::getState(){
	return sState;
}
String & Address::getZip(){
	return sZip;
}

Address & Address::setStreet(const String & str){
	sStreet = str;
	return *this;
}
Address & Address::setCity(const String & str){
	sCity = str;
	return *this;
}Address & Address::setState(const String & str){
	sState = str;
	return *this;
}Address & Address::setZip(const String & str){
	sZip = str;
	return *this;
}


#endif /* ADDRESS_H_ */
