#ifndef UCSTRING_H_
#define UCSTRING_H_

#include "myStringclass.h"


class UCString : public String{

public:
					UCString		();
					UCString		(const String &);
					UCString		(const char []);
					~UCString		();

private:

};


#endif /* UCSTRING_H_ */

//Default Constructor  - "one with no parameters to initialize the class to empty;"
UCString::UCString (){
};

//Copy Constructor- "and one with a parameter that is of class String to initialize to a copy of that value."
UCString::UCString(const String & str): String (str){
	return *this =
};

UCString::UCString (const char str []): String (str){
	toUpper();
};

UCString::~UCString(){
};
