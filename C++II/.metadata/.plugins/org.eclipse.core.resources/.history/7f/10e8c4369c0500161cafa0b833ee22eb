#include <iostream>
using namespace std;

#include <stdlib.h>

int main(int argc, char * argv  []) { //command line arguments, in Main, this tells the program.
									 //argc - is the typical name for the numerical argument

	int i;
	int Sum;

	Sum = 0;
	for(i = 1; i < argc; i++){
		Sum += atoi (argv [i]);
	}

	cout << "\tAverage is" << (Sum / (argc -1)) << endl;
	return 0;
}
